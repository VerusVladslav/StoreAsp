@model StoreAsp.Models.IndexViewModel

@{
    ViewBag.Title = "Setting";
}

<h2>Setting</h2>

@using (Html.BeginForm("Setting","Manage",new { enctype = "multipart/form-data" }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Image</label>
        <div class="col-md-10">
            <input type="file" name="imageFile" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Full Name </label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.User.UserAdditionalnfo.FullName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.User.UserAdditionalnfo.FullName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Password</label>
        <div class="col-md-10">
           
                @Html.ActionLink("Change your password", "ChangePassword")
           
           
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
